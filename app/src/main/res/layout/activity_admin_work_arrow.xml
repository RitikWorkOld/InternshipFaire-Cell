<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Employer's Dashboard"
    android:id="@+id/dash_title"
  android:textSize="20sp"
    android:textColor="@color/purple_200"
    android:layout_centerHorizontal="true"/>

    <FrameLayout
        android:id="@+id/events_container1"
android:layout_below="@+id/dash_title"
        android:layout_marginTop="4dp"
        android:layout_above="@id/card_view_radio_buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- Radio Buttons -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_radio_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="match_parent">

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="8dp">


                <RadioButton
                    android:id="@+id/radio_button_internship"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/radio_flat_selector"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:checked="true"
                    android:fontFamily="@font/nunito"
                    android:padding="8dp"
                    android:text="Internship"
                    android:textColor="@color/purple_200"
                    android:textSize="16sp" />




            </RadioGroup>

        </LinearLayout>

    </androidx.cardview.widget.CardView>





</RelativeLayout>