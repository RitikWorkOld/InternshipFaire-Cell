<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_check">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:id="@+id/status_title"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:text="Status:"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:id="@+id/status"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:text="Status"

        />
</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/main_layout"
                android:visibility="visible"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="80sp"
                    android:text=""
                    android:id="@+id/det_title"
                    android:layout_centerHorizontal="true"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:id="@+id/card"
                    android:elevation="6dp"
                    android:layout_below="@id/det_title"
                    app:cardCornerRadius="6dp"
                    android:layout_centerHorizontal="true"

                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_below="@id/det_title"

                        android:layout_centerHorizontal="true"

                        android:layout_height="wrap_content">


                        <ImageView
                            android:src="@drawable/user"
                            android:scaleType="centerCrop"
                            android:id="@+id/user_img"

                            android:layout_width="118dp"
                            android:layout_height="118dp"

                            />





                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_below="@id/card"

                    android:id="@+id/try_this2"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:id="@+id/desc_lay">

                        <TextView
                            android:hint="Describe Your Company"

                            android:id="@+id/desc_view"
                            android:textSize="16sp"
                            android:gravity="start"
                            android:paddingStart="8dp"
                            android:padding="4dp"
                            android:paddingRight="8dp"
                            android:background="@drawable/edittext"
                            android:layout_margin="16dp"
                            android:inputType="textMultiLine"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>




                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/name_lay"
                        android:layout_below="@id/desc_lay"
                        android:layout_height="wrap_content">

                        <TextView
                            android:hint="Company Name"
                            android:id="@+id/cmp_name"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:paddingStart="8dp"

                            android:paddingRight="8dp"
                            android:background="@drawable/edittext"
                            android:layout_margin="16dp"

                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_below="@id/name_lay"
                        android:id="@+id/email_layy"
                        android:layout_height="wrap_content">

                        <TextView
                            android:hint="Email"
                            android:id="@+id/cmp_email"

                            android:layout_margin="16dp"
                            android:paddingRight="8dp"
                            android:textColor="@color/white"
                            android:background="@drawable/edittext"
                            android:textSize="16sp"
                            android:paddingLeft="8dp"
                            android:gravity="center_vertical"
                            android:textColorHint="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>





                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_below="@id/email_layy"
                        android:id="@+id/numb_lay"
                        android:layout_height="wrap_content">
                        <TextView
                            android:hint="Contact Number"
                            android:id="@+id/cmp_no"
                            android:paddingRight="8dp"
                            android:inputType="numberDecimal"
                            android:layout_margin="16dp"

                            android:textColor="@color/white"
                            android:background="@drawable/edittext"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:textColorHint="@color/white"
                            android:paddingLeft="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_below="@id/numb_lay"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/accept_lay"
                        android:layout_height="wrap_content">
                        <Button
                            android:layout_width="wrap_content"
                            android:background="@drawable/btn_gradient_style"
                            android:textColor="@color/white"
                            android:id="@+id/accept_profile"
                            android:textSize="12sp"
                            android:layout_margin="4dp"
                            android:text="Accept"
                            android:layout_height="wrap_content"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:background="@drawable/btn_gradient_style"
                        android:textColor="@color/white"
                        android:id="@+id/reject_profile"
                        android:textSize="12sp"
                        android:layout_margin="4dp"
                        android:text="Reject"
                        android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"

                        android:layout_below="@id/accept_lay"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content">
                        <Button
                            android:layout_width="wrap_content"
                            android:background="@drawable/btn_gradient_style"
                            android:textColor="@color/white"
                            android:id="@+id/block"
                            android:textSize="12sp"
                            android:layout_margin="4dp"
                            android:text="Block"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:background="@drawable/btn_gradient_style"
                            android:textColor="@color/white"
                            android:id="@+id/unblock"
                            android:textSize="12sp"
                            android:layout_margin="4dp"
                            android:text="Unblock"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </RelativeLayout>



            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:id="@+id/aft_next_ly"
        android:layout_height="wrap_content"
        >
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_anim_rs"


            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"

            app:lottie_rawRes="@raw/stopwatch"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_below="@id/lottie_anim_rs"
            android:layout_marginTop="12dp"
            android:textStyle="italic"
            android:id="@+id/info_title"
            android:layout_margin="8dp"
            android:text="It will take 24-48 hours for your profile to be approved.Please wait till then.\n\nIn case of any queries,we will get in touch with you via your Email or Contact details."

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/okay_btn"
            android:layout_below="@id/info_title"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@drawable/btn_gradient_style"
            android:textColor="@color/white"
            android:text="okay"
            android:layout_marginTop="12dp"

            android:padding="16dp"/>

    </RelativeLayout>

</RelativeLayout>