<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:id="@+id/paid_status"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:text="PAID"/>




    <CheckBox
        android:layout_width="wrap_content"
        android:id="@+id/checker"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        android:id="@+id/crd"
android:layout_toStartOf="@+id/paid_status"
        android:layout_toEndOf="@id/checker"
        android:layout_margin="12dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/layout_card"
            android:layout_height="match_parent">






            <LinearLayout
                android:layout_width="wrap_content"

                android:orientation="vertical"
                android:id="@+id/layout_lay"

                android:layout_marginLeft="8dp"
                android:paddingEnd="20dp"

                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">
                <TextView
                    android:inputType="textMultiLine"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:text="Ritik Mehta"
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/icd_cmpname"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView

                    android:textColor="#808080"
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/icd_cmpsubname"

                    android:text="Oyo"
                    android:textSize="16sp"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>




            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"
                android:text="Profile"
android:visibility="gone"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:id="@+id/profile_btn"
                android:background="@drawable/btn_gradient_style"

                />



        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>