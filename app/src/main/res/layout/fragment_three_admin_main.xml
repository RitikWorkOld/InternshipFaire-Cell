                                android:layout_height="wrap_content"

                                android:gravity="center|start"
                                android:fontFamily="@font/montserrat"
                                android:textColor="#000"
                                android:text="Approval/Rejection Internship"
                                android:textSize="18sp" />





                        </LinearLayout>

                        <ImageView
