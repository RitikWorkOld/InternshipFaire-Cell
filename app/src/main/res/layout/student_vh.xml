<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <CheckBox
        android:buttonTint="@color/main_color"
        android:layout_width="wrap_content"
        android:id="@+id/checker"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        android:id="@+id/crd"
        android:layout_toRightOf="@id/checker"
        android:layout_margin="12dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/layout_card"
            android:layout_height="match_parent">






            <LinearLayout
                android:layout_width="wrap_content"

                android:orientation="vertical"
                android:id="@+id/layout_lay"

android:layout_marginLeft="8dp"
                android:paddingEnd="20dp"

                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">
                <TextView
                    android:inputType="textMultiLine"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:text=""
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/icd_cmpname"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView

                    android:textColor="#808080"
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/icd_cmpsubname"

                    android:text=""
                    android:textSize="16sp"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/tick"
                tools:visibility="visible"
                android:layout_toEndOf="@+id/layout_lay"
                android:layout_marginStart="12dp"
                android:layout_toStartOf="@+id/profile_btn"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tick"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"
                android:text="Profile"

                android:textSize="12sp"
                android:textColor="@color/white"
                android:id="@+id/profile_btn"
                android:background="@drawable/btn_gradient_style"

                />



        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>